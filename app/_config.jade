mixin radiobtn(label, model, name)
  - var rnm = Math.floor((Math.random() * 1000) + 1)
  .inputradio
    input(type="radio", id="name_#{rnm}", name="#{model}", ng-model="#{model}", value="#{label}")
    label(for="name_#{rnm}").button.button-pill.button-small #{label}
